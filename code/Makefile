#CC:=arm-linux-gcc
CC:=gcc

TARGET_SRV=iot_server
OBJECT_SRV=$(TARGET_SRV).o 

TARGET_CLN=iot_client
OBJECT_CLN=$(TARGET_CLN).o 

TARGET_CLN_SENSOR=sql_client
OBJECT_CLN_SENSOR=$(TARGET_CLN_SENSOR).o 

TARGET_CLN_BLE=ble_client
OBJECT_CLN_BLE=$(TARGET_CLN_BLE).o 


#LDFLAGS=-D_REENTRANT -pthread -lmysqlclient
LDFLAGS=-D_REENTRANT -pthread
LDFLAGS_SQL=-D_REENTRANT -pthread -lmysqlclient
LDFLAGS_BLE=-D_REENTRANT -pthread -lbluetooth

all : $(TARGET_SRV) $(TARGET_CLN) $(TARGET_CLN_SENSOR) $(TARGET_CLN_BLE)

$(TARGET_SRV):$(OBJECT_SRV)
	$(CC) -o $@ $(OBJECT_SRV) $(LDFLAGS)
$(TARGET_CLN):$(OBJECT_CLN)
	$(CC) -o $@ $(OBJECT_CLN) $(LDFLAGS)
$(TARGET_CLN_SENSOR):$(OBJECT_CLN_SENSOR)
	$(CC) -o $@ $(OBJECT_CLN_SENSOR) $(LDFLAGS_SQL)
$(TARGET_CLN_BLE):$(OBJECT_CLN_BLE)
	$(CC) -o $@ $(OBJECT_CLN_BLE) $(LDFLAGS_BLE)
%.o:%.c
	$(CC) -c -o $@ $<
clean:
	rm -f *.o $(TARGET_SRV) $(TARGET_CLN) $(TARGET_CLN_SENSOR) $(TARGET_CLN_BLE)
